<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="artistReadPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>csk.dbhw.actorsandmusicians.arts.Album</class>
    <class>csk.dbhw.actorsandmusicians.people.Artist</class>
    <class>csk.dbhw.actorsandmusicians.people.Band</class>
    <class>csk.dbhw.actorsandmusicians.people.Person</class>
    <class>csk.dbhw.actorsandmusicians.people.Scientist</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/am_db"/>
      <property name="javax.persistence.jdbc.user" value="user_name"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.password" value="password"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="artistWritePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>csk.dbhw.actorsandmusicians.arts.Album</class>
    <class>csk.dbhw.actorsandmusicians.people.Artist</class>
    <class>csk.dbhw.actorsandmusicians.people.Band</class>
    <class>csk.dbhw.actorsandmusicians.people.Person</class>
    <class>csk.dbhw.actorsandmusicians.people.Scientist</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/am_db"/>
      <property name="javax.persistence.jdbc.user" value="user_name"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.password" value="password"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
  
</persistence>
